			<plugin>
				  <groupId>org.codehaus.mojo</groupId>
				  <artifactId>exec-maven-plugin</artifactId>
				  <version>1.4.0</version>
				  <executions>
				    <execution>
				      <goals>
				        <goal>exec</goal>
				      </goals>
				    </execution>
				  </executions>
				  <configuration>
				   <classifier>weibo4j</classifier>
				  	<executable>java</executable>         		
				    <arguments>
				    	<argument>-classpath</argument>
				    	<argument>${basedir}/supportingJars/wsc-23.jar</argument>
						<argument>com.sforce.ws.tools.wsdlc</argument>
						<argument>${basedir}/wsdlResources/salesforce.wsdl</argument>
						<argument>${project.build.directory}/salesforce.jar</argument>
				    </arguments>
				  </configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<executions>
					<execution>
						<id>install-driiverseat-jar</id>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<packaging>jar</packaging>
							<artifactId>salesforce</artifactId>
							<groupId>force.com</groupId>
							<version>${project.version}</version>
							<file>${project.build.directory}/salesforce.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>install-wsc-jar</id>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<packaging>jar</packaging>
							<groupId>sfdc-wsc.com</groupId>
						    <artifactId>wsc</artifactId>
						    <version>23.0</version>
							<file>${basedir}/supportingJars/wsc-23.jar</file>
						</configuration>
					</execution>
				</executions>
			</plugin>
	   </plugins>
	</build>
